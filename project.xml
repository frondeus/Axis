<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="Axis" package="com.frondeus.axis" version="1.0.0" company="" />

 	<app file="Main" main="Main" path="bin" />

	<window fps="30" background="0x000000" />
	<window width="1024" height="768" resizable="true" unless="mobile" />
	<window fullscreen="true" if="mobile" />
	<window orientation="landscape" vsync="true" antialiasing="0" if="cpp" />

	<source path="src" />

	<haxelib name="openfl" />
	<haxelib name="HaxePunk" />

	<assets path="assets/graphics" rename="gfx" include="*.png|*.jpg" />
	<assets path="assets/audio" rename="sfx" include="*.mp3|*.wav" if="flash" />
	<assets path="assets/audio" rename="sfx" include="*.mp3|*.wav|*.ogg" unless="flash" />
	<assets path="assets/font" rename="font" include="*.ttf" />
	<assets path="assets/levels" rename="levels" include="*.xml" type="text" />
	<icon path="assets/graphics/logo.png" />
</project>
